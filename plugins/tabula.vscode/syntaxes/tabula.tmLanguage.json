{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Tabula",
  "scopeName": "source.tabula",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#cell-references"
    },
    {
      "include": "#cell-ranges"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.tabula",
          "match": "//.*$"
        },
        {
          "name": "comment.block.tabula",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tabula",
          "match": "\\b(let|fmt)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tabula",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.tabula",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.tabula",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.tabula",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.tabula",
          "match": "\\b(SUM|AVERAGE|MIN|MAX|ABS|ROUND|SQRT|MOD|POWER|FLOOR|CEIL|TRUNC|INT|SIGN|RAND|RANDBETWEEN|GCD|LCM|CONCATENATE|LEFT|RIGHT|MID|UPPER|LOWER|TRIM|LEN|SUBSTITUTE|FIND|REPLACE|TEXT|VALUE|SPLIT|JOIN|DATE|DATEVALUE|YEAR|MONTH|DAY|HOUR|MINUTE|SECOND|NOW|TODAY|DATEDIF|WEEKDAY|WORKDAY|NETWORKDAYS|TIME|TIMEVALUE|IF|AND|OR|NOT|TRUE|FALSE|ISNUMBER|ISTEXT|ISLOGICAL|ISBLANK|ISERROR|COLUMN|ROW|COLUMNS|ROWS|ADDRESS|REF|RANGE|INDEX|MATCH|VLOOKUP|HLOOKUP|EXEC|COUNT|COUNTA|COUNTBLANK|SUMIF|AVERAGEIF|MAXIFS|MINIFS)\\b"
        }
      ]
    },
    "cell-references": {
      "patterns": [
        {
          "name": "variable.other.cell.tabula",
          "match": "\\b[A-Z]+[0-9]+\\b"
        }
      ]
    },
    "cell-ranges": {
      "patterns": [
        {
          "name": "variable.other.range.tabula",
          "match": "\\b[A-Z]+[0-9]+:[A-Z]+[0-9]+\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.tabula",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.tabula",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.tabula",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.tabula",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.tabula",
          "match": "(\\+|\\-|\\*|\\/|%)"
        },
        {
          "name": "keyword.operator.assignment.tabula",
          "match": "="
        }
      ]
    }
  }
}
